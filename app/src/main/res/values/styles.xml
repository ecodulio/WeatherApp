<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="HintTextAppearance">
        <item name="android:textSize">@dimen/regular_size</item>
        <item name="android:fontFamily">@font/avenir_regular</item>
    </style>

    <style name="MaterialAlertDialogStyle" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="colorSurface">@color/md_theme_light_surface</item>
        <item name="shapeAppearanceMediumComponent">@style/RoundedCorners</item>
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
        <item name="materialAlertDialogTitleTextStyle">@style/DialogTitleTextStyle</item>
        <item name="materialAlertDialogBodyTextStyle">@style/DialogBodyTextStyle</item>
        <item name="materialButtonStyle">@style/ButtonStyle</item>
    </style>

    <style name="BottomSheetStyle" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
    </style>

    <style name="CustomTextAppearanceNormal">
        <item name="android:textSize">@dimen/regular_size</item>
        <item name="android:fontFamily">@font/avenir_regular</item>
    </style>

    <style name="DialogTitleTextStyle">
        <item name="android:textColor">@color/md_theme_light_onPrimaryContainer</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/avenir_bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="DialogBodyTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/avenir_regular</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/avenir_regular</item>
    </style>

    <style name="RoundedCorners">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="RoundedCorners.Small">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="CardTopCorners">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="ShapeAppearance.App.TopCorner" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

    <style name="ShapeAppearance.App.BottomCorner" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerSizeBottomLeft">16dp</item>
        <item name="cornerSizeBottomRight">16dp</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeTopRight">0dp</item>
    </style>

    <style name="BottomNavigationTheme">
        <item name="cardElevation">10dp</item>
        <item name="colorOnSurface">@color/md_theme_light_primary</item>
        <item name="colorOnSurfaceVariant">@color/md_theme_light_onSurfaceVariant</item>
        <item name="colorOnSecondaryContainer">@color/md_theme_light_primary</item>
    </style>

    <style name="CircleShape">
        <item name="cornerSize">50%</item>
    </style>

    <style name="TabItemTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="fontFamily">@font/avenir_regular</item>
        <item name="android:textSize">@dimen/regular_size</item>
    </style>

    <style name="MenuItemTextAppearance">
        <item name="android:fontFamily">@font/avenir_regular</item>
    </style>

</resources>